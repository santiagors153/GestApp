<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Panel.ViewPacienteFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:background="@drawable/diseno_foto_usuario"
                android:id="@+id/imgPhoto"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginBottom="@dimen/common_padding_default"
                android:paddingTop="@dimen/common_padding_min"
                android:src="@drawable/ic_person"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:id="@+id/ln"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgPhoto">

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/common_padding_min"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:paddingEnd="@dimen/common_padding_min"
                    tools:text="Nombre" />

                <TextView
                    android:id="@+id/tvApellidoP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="ApellidoP"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:paddingEnd="@dimen/common_padding_min"
                    android:paddingTop="@dimen/common_padding_min"/>

                <TextView
                    android:id="@+id/tvApellidoM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="ApellidoM"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:paddingTop="@dimen/common_padding_min"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvHisCli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceSubtitle2"
                tools:text="Historia clinica"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ln"/>

            <TextView
                android:id="@+id/tvDNI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                tools:text="DNI"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvHisCli"/>




        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>